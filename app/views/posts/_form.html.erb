<%= form_with(model: post, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content, "内容" %>
    <%= f.text_area :content, class:"form-control", rows:10 %>
  </div>
  
  <div class="mb-3">
    <%= f.label :画像 %><br/>
    <%= f.file_field :image %><br/>
  </div>
  
  <div>
    <%= f.submit "送信！", class:"btn btn-primary" %>
  </div>
  
    
<% end %>
