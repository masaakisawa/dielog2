<ul class="list-unstyled d-flex justify-content-around">
  <% posts.each do |post| %>
    <a href="/posts/<%= post.id %>">
      <li class="mt-3 px-4"><h5 class="text-dark m-0"><strong><%= post.title %></strong></h5></li>
      <li class="mb-2 px-4"><img src="<%= post.image %>" width="300"></li>
    </a>
  <% end %>
</ul>

